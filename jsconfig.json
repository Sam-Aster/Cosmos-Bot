{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "react",
        "resolveJsonModule": true,
        "checkJs": true,
        "experimentalDecorators": true,
        "strict": true,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
